        span=errorMessage
    form(method="POST")
        input(type="text", name="oldPassword", placeholder="Old Password", required)
        input(type="text", name="newPassword", placeholder="New Password", required)
        input(type="text", name="newPassword2", placeholder="Confirm Your New Password", required)
        input(type="submit" value="Edit Password")